#include <stdio.h>
int main(){
 int n,i,j,bt[10],pr[10],wt[10],tat[10],p[10],t;
 scanf("%d",&n);
 for(i=0;i<n;i++){ scanf("%d%d",&bt[i],&pr[i]); p[i]=i+1; }
 for(i=0;i<n;i++) for(j=i+1;j<n;j++) if(pr[i]>pr[j]){
  t=pr[i];pr[i]=pr[j];pr[j]=t;
  t=bt[i];bt[i]=bt[j];bt[j]=t;
  t=p[i];p[i]=p[j];p[j]=t;}
 wt[0]=0; for(i=1;i<n;i++) wt[i]=wt[i-1]+bt[i-1];
 for(i=0;i<n;i++){ tat[i]=bt[i]+wt[i];
  printf("P%d BT=%d PR=%d WT=%d TAT=%d\n",p[i],bt[i],pr[i],wt[i],tat[i]); }
}
OUTPUT:
P1	10	2	8	18
P2	5	1	18	23
