#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
int main() {
    int src, dest;
    char buffer[1024];
    ssize_t n;
    src = open("source.txt", O_RDONLY);
    dest = open("destination.txt", O_WRONLY | O_CREAT, 0644);
    if (src < 0 || dest < 0) {
        perror("File open error");
        return 1;
    }
    while ((n = read(src, buffer, sizeof(buffer))) > 0) {
        write(dest, buffer, n);
    }
    close(src);
    close(dest);
    printf("File copied successfully.\n");
    return 0;
}

Output:
ERROR!
File open error: Permission denied
